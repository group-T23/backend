    "/cart": {
      "post": {
        "summary": "Articoli carrello",
        "description": "Lista di tutti gli articoli del carrello dell'utente",
        "tags": [
          "Cart"
        ],
        "requestBody": {
          "description": "Dati dell'utente",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "tpye": "object",
